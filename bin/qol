if [[ $# == 0 ]]; then

    echo '+ git grep -i -l' >&2
    git grep -i -l

else

    index=0
    while [[ $# != 0 ]]; do

        if ! [[ "$1" =~ ^[-] ]]; then
            index=$((index + 1))
            parms[index]="-e"
        fi

        index=$((index + 1))
        parms[index]="$1"

        shift

    done

    echo '+ git grep -i -l' "${parms[@]}" -- "$ALTPWDS_0" "$ALTPWDS_1" >&2
    git grep -i -l "${parms[@]}" -- "$ALTPWDS_0" "$ALTPWDS_1"
fi
