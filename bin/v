# shellcheck disable=SC2154  # STY is referenced but not assigned

if [[ "$STY" ]]; then
    if "$(uname)" == "Darwin"; then
        echo '+ unset TERM' >&2
        unset TERM
    fi
fi

if [[ $# != 0 ]]; then
    set -xe
    vim "$@"
else
    set -xe
    pbpaste >pbpaste~$$~
    vim pbpaste~$$~
    pbcopy <pbpaste~$$~
fi
