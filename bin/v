# shellcheck disable=SC2154  # STY is referenced but not assigned

set -x

if [ "$STY" -ne "" ]; then
    if [ "$(uname)" = Darwin ]; then
        echo '+ unset TERM' >&2
        unset TERM
    fi
fi

if [ $# -ne 0 ]; then
    set -xe
    vim "$@"
else
    set -xe
    pbpaste >$$.pbpaste
    vim $$.pbpaste
    pbcopy <$$.pbpaste
fi
