# shellcheck disable=SC2154  # STY is referenced but not assigned

if [[ "$STY" ]]; then
    if "$(uname)" == "Darwin"; then
        echo '+ unset TERM' >&2
        unset TERM
    fi
fi

if [[ $# == 0 ]]; then
    set -xe
    pbpaste >v.cv
    vim v.cv
    <v.cv pbcopy
else
    set -xe
    vim "$@"
fi
