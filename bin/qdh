if ! git diff "$@" >/dev/null 2>&1; then
    set -e
    echo '+ git checkout >/dev/null' >&2
    git checkout >/dev/null
fi

if [[ $# == 0 ]]; then
    set -xe
    git diff HEAD~1
elif [[ "$1" =~ ^[0-9]$ ]]; then
    arg1=HEAD~$1
    shift
    set -xe
    git diff "$arg1" "$@"
else
    set -xe
    git diff HEAD~1 "$@"
fi
