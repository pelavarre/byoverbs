set -e

shline='git log --pretty=fuller --no-decorate --color-moved'

if [ $# -eq 0 ]; then
    shline="$shline --numstat --author=$(git config user.email)"
fi

if [ $1 = '.' ]; then
    shline="$shline --author=$(git config user.email)"  # no --numstat
    shift
fi

while [ $# -ne 0 ]; do
    case "$1" in
        -*)
            shline="$shline $1"
            ;;
        *)
            shline="$shline --author=$1"
            ;;
    esac
    shift
done

set -xe
$shline
