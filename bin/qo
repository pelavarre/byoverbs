if [[ $# == 0 ]]; then

    echo '+ git grep -i' >&2
    git grep -i  # fatal: no pattern given

else

    index=0
    while [[ $# != 0 ]]; do

        if ! [[ "$1" =~ ^[-] ]]; then
            index=$((index + 1))
            parms[index]="-e"
        fi

        index=$((index + 1))
        parms[index]="$1"

        shift

    done

    echo '+ git grep -i' "${parms[@]}" -- "${ALTPWDS[@]}" >&2
    git grep -i "${parms[@]}" -- "${ALTPWDS[@]}"
fi
