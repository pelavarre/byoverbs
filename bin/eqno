emacs=emacs
if ! which emacs >/dev/null; then
    emacs=/opt/homebrew/bin/emacs
fi

if [[ $(git rev-parse --show-toplevel) == $PWD ]]; then
    set -xe
    $emacs -nw --no-splash --eval '(menu-bar-mode -1)' $($qno0) "$@"
else
    set -xe
    (
        cd $(git rev-parse --show-toplevel) \
            && $emacs -nw --no-splash --eval '(menu-bar-mode -1)' $($qno0) "$@"
    )
fi
