if [[ $# == 0 ]]; then
    echo "+ git ls-files" "${ALTPWDS[@]}" >&2
    git ls-files "${ALTPWDS[@]}"
else
    echo "+ git ls-files" "${ALTPWDS[@]}" "|grep -i" "$@" >&2
    git ls-files "${ALTPWDS[@]}" |grep -i "$@"
fi

# note: Bash unsets the "${ALTPWDS[@]}" unless you run this Code as a Bash Func
