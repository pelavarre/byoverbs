D=$(dirname "$0")
if [[ $# == 0 ]]; then
    set -xe
    make soon
else
    set -xe
    echo |python3 -m pdb "$@"
    "$D"/black.bash "$@"
    "$D"/flake8.bash "$@"
    "$D"/mypy.bash "$@"
    grep -nHR '^ *def ' "$@" |grep -v ' -> ' || :
    git diff --color-moved HEAD~1 |grep '[^f]".*[{].*[}]'
fi
