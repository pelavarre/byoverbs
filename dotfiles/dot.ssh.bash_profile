# ~/.ssh/bash_profile


# Bind ⌃X ⌃E without ⌃X E

bind -r '\C-x\C-e'
bind '"\C-x\C-e": edit-and-execute-command'

EDITOR='pq xeditline'  # yes assigned, but Not-export'ed


